<div class="results">
    <h2>Top 25 Trending Movies</h2>
</div>
{{#each movies as |movie|}}
<div class="results-container">
    <div class="card-info" data-title="{{ movie.title }}" data-date="{{ movie.release_date }}" data-poster="{{movie.poster_path}}" data-id='{{ id }}'  data-type="Movie">
        <img src = "{{movie.poster_path}}" alt="Movie" class="card-image">
      
        <div class="title-date">
            <div class="card-title">{{movie.title}}</div>
            <div class="date">({{movie.release_date}})</div>
        </div>
        <div class="description"> {{ movie.overview}} </div> 
       
        <div class="myRating">
        </div>

        {{> changeStatus }}

    </div>
</div>
{{/each}}